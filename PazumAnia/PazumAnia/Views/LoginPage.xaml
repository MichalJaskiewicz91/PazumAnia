<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PazumAnia.Views.LoginPage">
    <ContentPage.Content>

        <StackLayout BackgroundColor="#005E68" Spacing="10" >
            <!-- Image PazumAnia White-->
            <Image Source="cuted"></Image>

            <!-- BoxView-->
            <BoxView HeightRequest="10"/>

            <!-- Login Label-->
            <Label x:Name="Logowanie" TextColor="White" Text="Logowanie" HorizontalOptions="Center" FontSize="24" FontFamily="Brushwell.otf#Brushwell" />
            
            <!-- Entry Login-->
            <Entry TextColor="White" Placeholder="Wpisz swój login " FontFamily="AlexBrush-Regular.ttf#AlexBrush-Regular" PlaceholderColor="White"/>

            <!-- Entry Password-->
            <Entry TextColor="white" Placeholder="Wpisz swoje hasło " FontFamily="AlexBrush-Regular.ttf#AlexBrush-Regular" PlaceholderColor="White"/>

            <!-- BoxView-->
            <BoxView HeightRequest="10"/>

            <!-- Submit button-->
            <Button Clicked="Button_Clicked" BackgroundColor="White" Text="Login" FontFamily="Brushwell.otf#Brushwell" TextColor="#005E68"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>