<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PazumAnia.Views.RegisterPage"
             xmlns:vm="clr-namespace:PazumAnia.ViewModels">

    <ContentPage.BindingContext>
        <vm:RegisterViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Orientation="Vertical">
        <Entry  Text="{Binding Email}"
                Placeholder="email"/>
        <Entry  Text="{Binding Password}"
                Placeholder="password"
                IsPassword="True"/>
        <Entry  Text="{Binding ConfirmPassword}"
                Placeholder="confirm password"
                IsPassword="True"/>

        <Button Command="{Binding RegisterCommand}"
                Text="Register"/>

        <Label Text="{Binding Message}"></Label>

        <Button Text="Go to login page" Clicked="Button_Clicked"/>

        <Button Text="Go to login Ania" Clicked="AniaButton_Clicked"/>

    </StackLayout>

</ContentPage>