<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PazumAnia.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="Brushwell" TargetType="Label">
                <Setter Property="FontFamily" Value="Brushwell.otf#Brushwell"/>
            </Style>
            <Style x:Key="OpenSans-Regular" TargetType="Label">
                <Setter Property="FontFamily" Value="OpenSans-Regular.ttf#OpenSans-Regular"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="AlexBrush-Regular.ttf#AlexBrush-Regular"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="Brushwell.otf#Brushwell"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>