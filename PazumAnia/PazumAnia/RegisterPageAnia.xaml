<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PazumAnia.RegisterPageAnia">
    <ContentPage.Content>
        
        <StackLayout BackgroundColor="White" Spacing="10" >
            <!-- Image PazumAnia White-->
            <Image Source="CutBlueLogo"></Image>

            <!-- BoxView-->
            <BoxView HeightRequest="5"/>

            <!-- Login Label-->
            <Label x:Name="Rejestracja" TextColor="#005E68" Text="Rejestracja" HorizontalOptions="Center" FontSize="24" FontFamily="Brushwell.otf#Brushwell" />

            <!-- Entry Login-->
            <Entry TextColor="#005E68" Placeholder="Wpisz swój login " FontFamily="AlexBrush-Regular.ttf#AlexBrush-Regular" PlaceholderColor="#005E68"/>

            <!-- Entry Password-->
            <Entry TextColor="#005E68" Placeholder="Wpisz swoje hasło " FontFamily="AlexBrush-Regular.ttf#AlexBrush-Regular" PlaceholderColor="#005E68"/>

            <!-- BoxView-->
            <BoxView HeightRequest="10"/>

            <Button Clicked="Button_Clicked" BackgroundColor="#005E68" Text="Login" FontFamily="Brushwell.otf#Brushwell" TextColor="White"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>